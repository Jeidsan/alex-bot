@model IEnumerable<Administrativo.Models.Administrador>

@{
    ViewData["Title"] = "Index";
}

<h2>Administradores</h2>

<div class="card mb-3">
    <div class="card-header">
        <a asp-action="Create" class="btn btn-primary"><i class="fa fa-fw fa-file"></i> Novo</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th width="10%"></th>
                        <th>Nome</th>
                        <th>E-mail</th>
                        <th>Login</th>
                        <th>Data de criação</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id"><i class="fa fa-fw fa-eye"></i></a> |
                            <a asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-fw fa-edit"></i></a> |
                            <a asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-fw fa-remove"></i></a>
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.Login)</td>
                        <td>@Html.DisplayFor(modelItem => item.DataInc)</td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>