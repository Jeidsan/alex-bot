@model Administrativo.Models.Tema

@{
    ViewData["Title"] = $"Novo tema";
}

<h2>Novo tema</h2>
<p class="text-danger">@ViewData["ErrorMessage"]</p>

<div class="card mb-3">
    <form asp-action="Create"> 
        <div class="card-header text-right">
            <a asp-action="Index" class="btn btn-primary "><i class="fa fa-fw fa-undo"></i> Cancelar</a>
            <button type="submit" class="btn btn-success"><i class="fa fa-fw fa-save"></i> Salvar</button>
        </div>
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <textarea rows="3" asp-for="Descricao" class="form-control"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
        </div>
        <div class="card-footer text-right">
            <a asp-action="Index" class="btn btn-primary"><i class="fa fa-fw fa-undo"></i> Cancelar</a>
            <button type="submit" class="btn btn-success"><i class="fa fa-fw fa-save"></i> Salvar</button>
        </div>
    </form>
</div>