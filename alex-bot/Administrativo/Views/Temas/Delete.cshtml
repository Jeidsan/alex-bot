@model Administrativo.Models.Tema

@{
    ViewData["Title"] = $"Tema - {Model.Nome}";
}

<h2>Tema - @Model.Nome</h2>
<p class="text-danger">@ViewData["ErrorMessage"]</p>

<div class="card mb-3">
    <div class="card-header">
        <span><b>Deseja realmente excluir o tema @Model.Nome?</b></span>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table" id="dataTable" width="100%" cellspacing="0">
                <tbody>
                    <tr>
                        <td width="15%" align="right">Nome: </td>
                        <td colspan="3">@Model.Nome</td>
                    </tr>
                    <tr>
                        <td width="15%" align="right">Descrição: </td>
                        <td colspan="3">@Model.Descricao</td>
                    </tr>
                    <tr>
                        <td width="15%" align="right">Cadastrado por: </td>
                        <td>@Model.IncPor.Nome</td>
                        <td width="15%" align="right">Cadastrado em: </td>
                        <td>@Model.DataInc</td>
                    </tr>
                    <tr>
                        <td width="15%" align="right">Modificado por: </td>
                        <td>@Model.ModPor.Nome</td>
                        <td width="15%" align="right">Modificado em: </td>
                        <td>@Model.DataMod</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer text-right">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <a asp-action="Index" class="btn btn-primary"><i class="fa fa-fw fa-undo"></i> Cancelar</a>
            <button type="submit" class="btn btn-danger"><i class="fa fa-fw fa-save"></i> Excluir</button>
        </form>
    </div>
</div>