@model Administrativo.Models.Resposta

@{
    ViewData["Title"] = $"Resposta - {Model.Id}";
}

<h2>Resposta - @Model.Id</h2>
<p class="text-danger">@ViewData["ErrorMessage"]</p>

<div class="card mb-3">
    <div class="card-header">
        <span><b>Deseja realmente excluir esta resposta?</b></span>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table" id="dataTable" width="100%" cellspacing="0">
                <tbody>
                    <tr>
                        <td width="15%" align="right">@Html.DisplayNameFor(p => p.Pergunta) </td>
                        <td colspan="3">@Model.Pergunta?.Descricao</td>
                    </tr>
                    <tr>
                        <td width="15%" align="right">@Html.DisplayNameFor(p => p.Descricao) </td>
                        <td colspan="3">@Model.Descricao</td>
                    </tr>
                    <tr>
                        <td width="15%" align="right">@Html.DisplayNameFor(p => p.IncPor)</td>
                        <td>@Model.IncPor?.Nome</td>
                        <td width="15%" align="right">@Html.DisplayNameFor(p => p.DataInc)</td>
                        <td>@Model.DataInc</td>
                    </tr>
                    <tr>
                        <td width="15%" align="right">@Html.DisplayNameFor(p => p.ModPor)</td>
                        <td>@Model.ModPor?.Nome</td>
                        <td width="15%" align="right">@Html.DisplayNameFor(p => p.DataMod)</td>
                        <td>@Model.DataMod</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer text-right">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <a asp-action="Index" class="btn btn-primary"><i class="fa fa-fw fa-undo"></i> Cancelar</a>
            <button type="submit" class="btn btn-danger"><i class="fa fa-fw fa-save"></i> Excluir</button>
        </form>
    </div>
</div>