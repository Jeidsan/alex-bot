@model Administrativo.Models.Resposta

@{
    ViewData["Title"] = $"Resposta {Model.Id}";
}

<h2>Resposta - @Model.Id</h2>


<div class="card mb-3">
    <div class="card-header text-right">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary "><i class="fa fa-fw fa-edit"></i> Editar</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger"><i class="fa fa-fw fa-remove"></i> Excluir</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table" id="dataTable" width="100%" cellspacing="0">
                <tbody>
                    <tr>
                        <td width="15%" align="right">@Html.DisplayNameFor(p => p.Pergunta) </td>
                        <td colspan="3">@Model.Pergunta?.Descricao</td>
                    </tr>
                    <tr>
                        <td width="15%" align="right">@Html.DisplayNameFor(p => p.Descricao) </td>
                        <td colspan="3">@Model.Descricao</td>
                    </tr>
                    <tr>
                        <td width="15%" align="right">@Html.DisplayNameFor(p => p.IncPor)</td>
                        <td>@Model.IncPor?.Nome</td>
                        <td width="15%" align="right">@Html.DisplayNameFor(p => p.DataInc)</td>
                        <td>@Model.DataInc</td>
                    </tr>
                    <tr>
                        <td width="15%" align="right">@Html.DisplayNameFor(p => p.ModPor)</td>
                        <td>@Model.ModPor?.Nome</td>
                        <td width="15%" align="right">@Html.DisplayNameFor(p => p.DataMod)</td>
                        <td>@Model.DataMod</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <h4>Anexos</h4>
        <div class="card mb-4">
            <div class="card-header">
                <a asp-controller="Anexos" asp-action="Create" class="btn btn-primary"><i class="fa fa-fw fa-file"></i> Novo</a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th width="10%"></th>
                                <th>Legenda</th>
                                <th>Descrição</th>                               
                                <th width="10%">Adequada</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.QuantidadeAnexos > 0)
                            {
                                @foreach (var item in Model.Anexos)
                                {
                                    <tr>
                                        <td>
                                            <a asp-controller="Anexos" asp-action="Details" asp-route-id="@item.Id"><i class="fa fa-fw fa-eye"></i></a> |
                                            <a asp-controller="Anexos" asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-fw fa-edit"></i></a> |
                                            <a asp-controller="Anexos" asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-fw fa-remove"></i></a>
                                        </td>                                       
                                        <td>@Html.DisplayFor(modelItem => item.Legenda)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Descricao)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Adequada)</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
    <div class="card-footer text-right">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary "><i class="fa fa-fw fa-edit"></i> Editar</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger"><i class="fa fa-fw fa-remove"></i> Excluir</a>
    </div>
</div>